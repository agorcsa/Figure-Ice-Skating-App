<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    // activity_main.xml

    <style name="PhotoLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1.5</item>
    </style>

    <style name="IceSkatersImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/iceskaters</item>
    </style>

    <style name="TextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/marginM</item>
    </style>

    <style name="Layout.AppName">
        <item name="android:text">@string/title_start</item>
        <item name="android:textSize">@dimen/textSizeApp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">@bool/layout_centerHorizontal</item>
        <item name="android:layout_marginTop">@dimen/maginTopStart</item>
    </style>

    <style name="Layout.StartButton">
        <item name="android:text">@string/start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/start_button</item>
        <item name="android:onClick">startSecondActivity</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="Layout.Hint">
        <item name="android:text">@string/hint</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/textSizeHint</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">@bool/layout_centerHorizontal</item>
        <item name="android:layout_alignParentBottom">@bool/layout_alignParentBottom</item>
        <item name="android:layout_marginLeft">@dimen/marginM</item>
        <item name="android:layout_marginRight">@dimen/marginM</item>
    </style>


    // activity_main2.xml

    <style name="Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
