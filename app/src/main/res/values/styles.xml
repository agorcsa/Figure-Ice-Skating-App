<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    /**Custom Background Style */

    <style name="CustomBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/jumps</item>
        <item name="android:alpha">0.3</item>
        <item name="android:contentDescription">@string/jumps_image</item>
    </style>

    /** Custom Text Title Style */

    <style name="CustomLayoutStyle.CustomTextTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:text">@string/title</item>
        <item name="android:textSize">@dimen/textTitleSize</item>
        <item name="android:capitalize">characters</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:layout_alignParentTop">@bool/layout_alignParentTop</item>
        <item name="android:layout_centerHorizontal">@bool/layout_centerHorizontal</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="CustomBigTextViewLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_alignParentStart">@bool/layout_alignParentStart</item>
        <item name="android:layout_alignTop">@+id/textView</item>
    </style>

    /**Custom Half Text Layout Style */

    <style name="CustomHalfTextLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
    </style>

    <style name="CustomHalfTextLayoutStyle.CustomHalf1TextLayoutStyle"></style>

    <style name="CustomHalfTextLayoutStyle.CustomHalf2TextLayoutStyle">
        <item name="android:layout_marginStart">@dimen/marginBetweenLayouts</item>
    </style>

    /**CustomColumnStyle */

    <style name="CustomColumnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CustomColumnStyle.CustomElementsLayoutStyle">
        <item name="android:layout_marginStart">@dimen/margin</item>
    </style>

    <style name="CustomColumnStyle.CustomDifficultyLayoutStyle">
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    /**Custom Layout Style */

    <style name="CustomLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomLayoutStyle.CustomHorizontalLayoutStyle">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CustomLayoutStyle.CustomVerticalLayoutStyle">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CustomLayoutStyle.CustomVerticalLayoutStyle.CustomVerticalCenterLayoutStyle">
        <item name="android:gravity">center</item>
    </style>

    /** Custom Spinner Style */

    <style name="CustomSpinnerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="CustomSpinnerStyle.CustomSpinnerDifficultyStyle">
        <item name="android:entries">@array/difficulty_level</item>
        <item name="android:prompt">@string/difficulty</item>
    </style>

    <style name="CustomSpinnerStyle.CustomSpinnerGOEStyle">
        <item name="android:entries">@array/grade_of_execution</item>
        <item name="android:prompt">@string/drop_down_list</item>
    </style>

    /**CustomTitleColumnStyle */

    <style name="CustomTitleColumnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CustomTitleColumnStyle.CustomTitleElementsStyle">
        <item name="android:text">@string/elements</item>
    </style>

    <style name="CustomTitleColumnStyle.CustomTitleDifficultyStyle">
        <item name="android:text">@string/difficulty</item>
    </style>

    <style name="CustomTitleColumnStyle.CustomTitleGoeStyle">
        <item name="android:text">@string/goe</item>
    </style>

    /**Custom Skater Style */

    <style name="CustomSkaterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
    </style>

    <style name="CustomSkaterStyle.CustomSkater1Style">
        <item name="android:text">@string/skater_1</item>
    </style>

    <style name="CustomSkaterStyle.CustomSkater2Style">
        <item name="android:text">@string/skater_2</item>
        <item name="android:layout_alignParentRight">@bool/layout_alignParentRight</item>
    </style>

    /**Custom Custom Score Text Style */

    <style name="CustomScoreTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeScore</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
    </style>

    <style name="CustomScoreTextStyle.CustomScoreText1Style">

        <item name="android:layout_above">@+id/button_skater1</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    <style name="CustomScoreTextStyle.CustomScoreText2Style">

        <item name="android:layout_above">@+id/button_skater2</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_alignParentRight">@bool/layout_alignParentRight</item>
    </style>

    /**Custom Video Button Style */

    <style name="CustomVideoButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_alignParentBottom">@bool/layout_alignParentBottom</item>
    </style>

    <style name="CustomVideoButtonStyle.CustomVideoButton1Style">
        <item name="android:text">@string/video_1</item>
        <item name="android:onClick">@string/video_1</item>
        <item name="android:background">@drawable/video_button_jumps</item>
    </style>

    <style name="CustomVideoButtonStyle.CustomVideoButton2Style">
        <item name="android:text">@string/video_2</item>
        <item name="android:onClick">@string/video_2</item>
        <item name="android:background">@drawable/video_button_jumps</item>
        <item name="android:layout_alignParentRight">@bool/layout_alignParentRight</item>
    </style>

    <style name="CustomVideoButtonStyle.CustomResetButtonStyle">
        <item name="android:text">@string/reset</item>
        <item name="android:background">@drawable/reset_button_jumps</item>
        <item name="android:layout_centerHorizontal">@bool/layout_centerHorizontal</item>
    </style>

    /** Custom Jump Types Style */

    <style name="CustomSpinnerStyle.CustomJumpTypesStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomSpinnerStyle.CustomJumpTypesStyle.CustomToeLoopStyle">
        <item name="android:text">@string/toeloop</item>
    </style>

    <style name="CustomSpinnerStyle.CustomJumpTypesStyle.CustomSalchowStyle">
        <item name="android:text">@string/salchow</item>
    </style>

    <style name="CustomSpinnerStyle.CustomJumpTypesStyle.CustomLoopStyle">
        <item name="android:text">@string/loop</item>
    </style>

    <style name="CustomSpinnerStyle.CustomJumpTypesStyle.CustomFlipStyle">
        <item name="android:text">@string/salchow</item>
    </style>

    <style name="CustomSpinnerStyle.CustomJumpTypesStyle.CustomLutzStyle">
        <item name="android:text">@string/lutz</item>
    </style>

    <style name="CustomSpinnerStyle.CustomJumpTypesStyle.CustomAxelStyle">
        <item name="android:text">@string/axel</item>
    </style>

    <style name="boldText">
        <item name="android:textStyle">bold</item>

        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="boldTextSteps">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="titleColumn">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    //activity_main.xml styles
    
    <style name="IceSkatersPicture">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/iceskaters</item>
    </style>

</resources>


