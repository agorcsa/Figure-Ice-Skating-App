    <style name="Layout.VerticalLayout">
        <item name="android:orientation">vertical</item>
    </style>


    <style name="Layout.VerticalLayout.VerticalCenterLayout">
        <item name="android:layout_marginLeft">@dimen/marginM</item>
    </style>

    <style name="Layout.Column">
        <item name="android:orientation">vertical</item>
