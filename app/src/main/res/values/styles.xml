<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    /**ScoreText2 Background Style */

    <style name="Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/jumps</item>
        <item name="android:alpha">0.3</item>
        <item name="android:contentDescription">@string/jumps_image</item>
    </style>

    /** ScoreText2 Text Title Style */

    <style name="Layout.TextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:text">@string/title</item>
        <item name="android:textSize">@dimen/textTitleSize</item>
        <item name="android:capitalize">characters</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:layout_alignParentTop">@bool/layout_alignParentTop</item>
        <item name="android:layout_centerHorizontal">@bool/layout_centerHorizontal</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="BigTextViewLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_alignParentStart">@bool/layout_alignParentStart</item>
        <item name="android:layout_alignTop">@+id/textView</item>
    </style>

    /**ScoreText2 Half Text Layout Style */

    <style name="HalfTextLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
    </style>

    <style name="HalfTextLayout.Half1TextLayout"></style>

    <style name="HalfTextLayout.Half2TextLayout">
        <item name="android:layout_marginStart">@dimen/marginBetweenLayouts</item>
    </style>

    /**CustomColumnStyle */

    <style name="Column">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Column.ElementsLayout">
        <item name="android:layout_marginStart">@dimen/margin</item>
    </style>

    <style name="Column.DifficultyLayout">
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    /**ScoreText2 Layout Style */

    <style name="Layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.HorizontalLayout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.VerticalLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout.VerticalLayout.VerticalCenterLayout">
        <item name="android:gravity">center</item>
    </style>

    /** ScoreText2 Spinner Style */

    <style name="Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="Spinner.SpinnerDifficulty">
        <item name="android:entries">@array/difficulty_level</item>
        <item name="android:prompt">@string/difficulty</item>
    </style>

    <style name="Spinner.SpinnerGOE">
        <item name="android:entries">@array/grade_of_execution</item>
        <item name="android:prompt">@string/drop_down_list</item>
    </style>

    /**TitleColumn */

    <style name="TitleColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TitleColumn.TitleElement">
        <item name="android:text">@string/elements</item>
    </style>

    <style name="TitleColumn.TitleDifficulty">
        <item name="android:text">@string/difficulty</item>
    </style>

    <style name="TitleColumn.TitleGoe">
        <item name="android:text">@string/goe</item>
    </style>

    /**ScoreText2 Skater Style */

    <style name="Skater">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
    </style>

    <style name="Skater.Skater1">
        <item name="android:text">@string/skater_1</item>
    </style>

    <style name="Skater.Skater2">
        <item name="android:text">@string/skater_2</item>
        <item name="android:layout_alignParentRight">@bool/layout_alignParentRight</item>
    </style>

    /**ScoreText2 ScoreText2 Score Text Style */

    <style name="ScoreText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeScore</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
    </style>

    <style name="ScoreText.ScoreText1">

        <item name="android:layout_above">@+id/button_skater1</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    <style name="ScoreText.ScoreText2">

        <item name="android:layout_above">@+id/button_skater2</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_alignParentRight">@bool/layout_alignParentRight</item>
    </style>

    /**ScoreText2 Video Button Style */

    <style name="VideoButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_alignParentBottom">@bool/layout_alignParentBottom</item>
    </style>

    <style name="VideoButton.VideoButton1">
        <item name="android:text">@string/video_1</item>
        <item name="android:onClick">videoButton1</item>
        <item name="android:background">@drawable/video_button_jumps</item>
    </style>

    <style name="VideoButton.VideoButton2">
        <item name="android:text">@string/video_2</item>
        <item name="android:onClick">videoButton2</item>
        <item name="android:background">@drawable/video_button_jumps</item>
        <item name="android:layout_alignParentRight">@bool/layout_alignParentRight</item>
    </style>

    <style name="VideoButton.ResetButton">
        <item name="android:text">@string/reset</item>
        <item name="android:background">@drawable/reset_button_jumps</item>
        <item name="android:layout_centerHorizontal">@bool/layout_centerHorizontal</item>
    </style>

    /** ScoreText2 Jump Types Style */

    <style name="Spinner.JumpTypes">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Spinner.JumpTypes.ToeLoop">
        <item name="android:text">@string/toeloop</item>
    </style>

    <style name="Spinner.JumpTypes.Salchow">
        <item name="android:text">@string/salchow</item>
    </style>

    <style name="Spinner.JumpTypes.Loop">
        <item name="android:text">@string/loop</item>
    </style>

    <style name="Spinner.JumpTypes.Flip">
        <item name="android:text">@string/salchow</item>
    </style>

    <style name="Spinner.JumpTypes.Lutz">
        <item name="android:text">@string/lutz</item>
    </style>

    <style name="Spinner.JumpTypes.Axel">
        <item name="android:text">@string/axel</item>
    </style>

    <style name="boldText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="boldTextSteps">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="titleColumn">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    //activity_main.xml styles
    
    <style name="IceSkatersPicture">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/iceskaters</item>
    </style>

    <style name="Layout.ImageButton">
        <item name="android:layout_above">@+id/scoreSkater2</item>
        <item name="android:layout_alignParentRight">@bool/layout_alignParentRight</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:background">@drawable/arrow_right</item>
        <item name="android:onClick">startThirdActivity</item>
    </style>

</resources>


