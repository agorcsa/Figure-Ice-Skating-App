    <style name="Layout.ScoreText.ScoreFinal1">
        <item name="android:layout_above">@id/buttonJumpsSkater1</item>
        <item name="android:layout_marginLeft">@dimen/marginM</item>
    </style>

    <style name="Layout.ScoreText.ScoreFinal2">
        <item name="android:layout_above">@id/buttonJumpsSkater2</item>
        <item name="android:layout_marginRight">@dimen/marginM</item>
        <item name="android:layout_alignParentRight">@bool/layout_alignParentRight</item>
    </style>

    <style name="VideoButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
