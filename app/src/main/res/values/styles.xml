    </style>

    <style name="Layout.ScoreText.ScoreJumps1">
        <item name="android:layout_above">@id/buttonJumpsSkater1</item>
        <item name="android:layout_marginLeft">@dimen/marginM</item>
    </style>

    <style name="Layout.ScoreText.ScoreJumps2">
        <item name="android:layout_above">@id/buttonJumpsSkater2</item>
        <item name="android:layout_marginRight">@dimen/marginM</item>
